<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ResetPassword.ResetPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/toolbar"
            android:id="@+id/divToolbar"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <!-- Profile Section -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/profileSection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginHorizontal="20dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/reset_pw1"
                                    style="@style/TEXT"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/poppins_bold"
                                    android:layout_marginTop="10dp"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/reset_pw2"
                                    style="@style/TEXT"
                                    android:layout_marginTop="12dp"/>

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:endIconMode="password_toggle"
                                    android:hint="@string/reset_pw3"
                                    app:startIconDrawable="@drawable/ic_baseline_lock_24"
                                    android:layout_marginTop="10dp">

                                    <com.c241ps220.centingapps.views.CustomView.CustomEditText
                                        android:id="@+id/etOldPassword"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:inputType="textPassword"
                                        android:textSize="12sp"
                                        tools:ignore="SpeakableTextPresentCheck" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:endIconMode="password_toggle"
                                    android:hint="@string/reset_pw4"
                                    app:startIconDrawable="@drawable/ic_baseline_lock_24"
                                    android:layout_marginTop="10dp">

                                    <com.c241ps220.centingapps.views.CustomView.CustomEditText
                                        android:id="@+id/etNewPassword"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:inputType="textPassword"
                                        android:textSize="12sp"
                                        tools:ignore="SpeakableTextPresentCheck" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:endIconMode="password_toggle"
                                    android:hint="@string/reset_pw5"
                                    app:startIconDrawable="@drawable/ic_baseline_lock_24"
                                    android:layout_marginTop="10dp">

                                    <com.c241ps220.centingapps.views.CustomView.CustomEditText
                                        android:id="@+id/etConfirmNewPassword"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:inputType="textPassword"
                                        android:textSize="12sp"
                                        tools:ignore="SpeakableTextPresentCheck" />
                                </com.google.android.material.textfield.TextInputLayout>



                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginHorizontal="20dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10dp">
                            <!-- Apply Button -->
                            <Button
                                android:id="@+id/btCancel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/poppins_bold"
                                android:text="@string/cancel"
                                android:textSize="14sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:backgroundTint="@color/colorRed"
                                android:layout_marginRight="5dp"/>

                            <Button
                                android:id="@+id/btSave"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/poppins_bold"
                                android:text="@string/save"
                                android:textSize="14sp"
                                android:layout_marginLeft="5dp"/>
                        </LinearLayout>
                    </RelativeLayout>









                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
            <include layout="@layout/layout_development"
                android:id="@+id/divDevelopment"
                android:visibility="gone"/>
        </RelativeLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
