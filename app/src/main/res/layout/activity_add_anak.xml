<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/divToolbar"
            layout="@layout/toolbar" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/child_name"
                    android:layout_marginTop="10dp"
                    style="@style/Widget.TextInputLayout.Custom"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeColor="@color/colorPrimaryDark">

                    <EditText
                        android:id="@+id/etNameChild"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:textSize="12sp"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:paddingBottom="7dp"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/child_birth"
                    android:layout_marginTop="10dp"
                    style="@style/Widget.TextInputLayout.Custom"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeColor="@color/colorPrimaryDark">

                    <EditText
                        android:id="@+id/etBirthChild"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:textSize="12sp"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:paddingBottom="7dp"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/child_age"
                    android:layout_marginTop="10dp"
                    style="@style/Widget.TextInputLayout.Custom"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeColor="@color/colorPrimaryDark">

                    <EditText
                        android:enabled="false"
                        android:id="@+id/etAgeChild"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:textSize="12sp"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:paddingBottom="7dp"
                        android:text="0"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>






    </LinearLayout>


</RelativeLayout>