<?xml version="1.0" encoding="utf-8"?>
<!-- list_item_service.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="2dp"
    android:elevation="5dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!-- Gambar Layanan -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp">
            <ImageView
                android:id="@+id/tvImage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@color/colorGreyHalf"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 Agustus 2024"
                android:textColor="@color/colorCalmGrey"
                android:ellipsize="end"
                android:textSize="9sp"
                android:maxLines="1"
                />

            <!-- Nama Layanan -->
            <TextView
                android:id="@+id/tvServiceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummyLongText"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="7dp">
                <TextView
                    android:id="@+id/tvPublisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oleh CenAD"
                    android:textColor="@color/colorCalmGrey"
                    android:ellipsize="end"
                    android:textSize="9sp"
                    android:maxLines="1"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:src="@color/colorPrimary"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tvTimelapse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 Menit"
                    android:textColor="@color/colorCalmGrey"
                    android:ellipsize="end"
                    android:textSize="9sp"
                    android:maxLines="1"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>