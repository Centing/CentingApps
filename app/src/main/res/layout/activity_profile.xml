<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.Profile.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/toolbar"
            android:id="@+id/divToolbar"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <!-- Profile Section -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/profileSection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginHorizontal="20dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <RelativeLayout
                                    android:id="@+id/divName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_width="100dp"
                                        android:layout_height="100dp"
                                        android:src="@color/colorPrimaryDark" />

                                    <TextView
                                        android:id="@+id/tvInisial"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:gravity="center"
                                        android:text="XX"
                                        android:textColor="@color/white"
                                        android:textSize="30sp"
                                        android:textStyle="bold" />
                                </RelativeLayout>


                                <!-- Profile Name -->

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="Nama"
                                    android:textSize="10sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tvName"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="@string/dummy_name"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="Email"
                                    android:textSize="10sp"
                                    android:layout_marginTop="6dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tvEmail"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="@string/dummy_email"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="Jenis Kelamin"
                                    android:textSize="10sp"
                                    android:layout_marginTop="6dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tvJenisKelamin"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="Laki - Laki"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="Tanggal Lahir"
                                    android:textSize="10sp"
                                    android:layout_marginTop="6dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tvTanggalLahir"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="29 Maret 2003"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="Umur"
                                    android:textSize="10sp"
                                    android:layout_marginTop="6dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tvUmur"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="21"
                                    android:textSize="14sp" />


                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="20dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10dp">
                            <!-- Apply Button -->
                            <Button
                                android:id="@+id/btEditProfile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Ubah Profil"
                                android:textSize="14sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/logoutbutton"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Log Out"
                                android:textSize="14sp"
                                android:backgroundTint="@color/colorRed"/>
                        </LinearLayout>
                    </RelativeLayout>









                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <include layout="@layout/layout_development"
                android:id="@+id/divDevelopment"
                android:visibility="gone"/>
        </RelativeLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
