<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.Deteksi.User.DetectionUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/toolbar"
            android:id="@+id/divToolbar"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btSelectChild"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="@string/select_child"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:id="@+id/tvIdChild"
                    style="@style/TEXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/male"
                    android:textStyle="bold"
                    android:visibility="gone"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.TextInputLayout.Custom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="@string/child_name"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeColor="@color/colorPrimaryDark">

                    <EditText
                        android:id="@+id/etNameChild"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:paddingBottom="7dp"
                        android:textSize="12sp"
                        android:enabled="false"
                        android:text="@string/please_select_child"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.TextInputLayout.Custom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="@string/jenis_kelamin"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeColor="@color/colorPrimaryDark">

                    <EditText
                        android:id="@+id/etGender"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:paddingBottom="7dp"
                        android:textSize="12sp"
                        android:enabled="false"
                        android:text="@string/please_select_child"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.TextInputLayout.Custom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="@string/child_birth"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeColor="@color/colorPrimaryDark">

                    <EditText
                        android:id="@+id/etBirthChild"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="text"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:paddingBottom="7dp"
                        android:textSize="12sp"
                        android:enabled="false"
                        android:text="@string/please_select_child"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.TextInputLayout.Custom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="@string/child_age"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeColor="@color/colorPrimaryDark">

                    <EditText
                        android:id="@+id/etAge"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:paddingBottom="7dp"
                        android:textSize="12sp"
                        android:enabled="false"
                        android:text="@string/please_select_child"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.TextInputLayout.Custom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="@string/height_birth"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeColor="@color/colorPrimaryDark">

                    <EditText
                        android:id="@+id/etBirthHeight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:paddingBottom="7dp"
                        android:textSize="12sp"
                        android:enabled="false"
                        android:text="@string/please_select_child"/>
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp"
                    app:cardPreventCornerOverlap="true"
                    android:layout_marginHorizontal="3dp"
                    android:layout_marginVertical="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingVertical="20dp"
                        android:paddingHorizontal="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:text="@string/height_latest"
                            android:textColor="@color/colorPrimaryDark"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/tvValueHeightLatest"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_extra_bold"
                            android:textSize="20dp"
                            android:text="60 Cm"
                            style="@style/TEXT"
                            android:gravity="center"
                            android:layout_marginVertical="15dp"/>
                        <SeekBar
                            android:splitTrack="false"
                            android:id="@+id/sbHeightLatest"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="200"
                            android:min="0"
                            android:progress="60"
                            android:thumb="@drawable/seekbar_thumb"
                            android:progressDrawable="@drawable/seekbar_progress"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


                <!--                Button Deteksi -->
                <Button
                    android:id="@+id/btDetectionNow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:text="@string/detection_now"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginHorizontal="20dp"/>



            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</RelativeLayout>